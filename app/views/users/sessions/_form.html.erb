<% input_classes = 'w-full h-14 border-none focus:ring-0' %>
<%= form_for resource, as: resource_name, url: session_path(resource_name)  do |form| %>
  <div class="flex flex-col px-4 border-y border-neutral bg-white">
    <div>
      <%= render 'users/shared/error_messages', resource: resource %>
    </div>
    <div>
      <%= form.email_field :email, class: input_classes, autocomplete: "email", placeholder: "Email" %>
    </div>
    <div class="border-t border-neutral"></div>
    <div>
      <%= form.password_field :password, class: input_classes, placeholder: "Password" %>
    </div>
  </div>
  <div class="mt-8">
    <button type="submit" class="w-full px-4 py-2 text-main tracking-wide">
      Sign in
    </button>
  </div>
<% end %>
<div class="text-slate-500 text-sm text-center mt-4">
  <%= link_to "Forgot password?", new_user_password_path(resource_name) %><br />
</div>
